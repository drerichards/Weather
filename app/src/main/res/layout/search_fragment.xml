<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/cityEntry"
        android:hint="Enter City"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"
        android:typeface="monospace" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Weather"
        android:id="@+id/weatherButton"
        android:layout_below="@+id/cityEntry"
        android:layout_centerHorizontal="true"
        android:typeface="serif" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/background"
        android:alpha="2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/weatherButton"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/cityField"
        android:typeface="serif"
        android:textColor="#fff"
        android:shadowColor="#000"
        android:shadowDy="5"
        android:shadowRadius="20"
        android:textSize="35sp"
        android:layout_below="@+id/weatherButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:shadowDx="5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/date"
        android:textColor="#fff"
        android:shadowColor="#000"
        android:shadowDx="7"
        android:shadowDy="7"
        android:shadowRadius="23"
        android:layout_below="@+id/cityField"
        android:layout_centerHorizontal="true"
        android:typeface="serif" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/temperature"
        android:textSize="60sp"
        android:layout_gravity="center_horizontal"
        android:shadowColor="#000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="20"
        android:textColor="#fff"
        android:layout_below="@+id/date"
        android:layout_centerHorizontal="true"
        android:typeface="sans" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weatherIcon"
        android:layout_gravity="center_horizontal"
        android:baselineAlignBottom="false"
        android:contentDescription="Weather Icon"
        android:layout_below="@+id/temperature"
        android:layout_centerHorizontal="true"
        android:shadowColor="#000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="20"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/weatherCondition"
        android:layout_gravity="center_horizontal"
        android:textColor="#fff"
        android:gravity="center|center_horizontal"
        android:shadowColor="#000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="20"
        android:layout_below="@+id/weatherIcon"
        android:layout_centerHorizontal="true"
        android:textSize="16dp"
        android:typeface="serif" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/maxTemp"
        android:textColor="#fff"
        android:layout_marginTop="35dp"
        android:shadowColor="#000"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="20"
        android:textSize="16dp"
        android:typeface="sans"
        android:layout_below="@+id/weatherCondition"
        android:layout_toLeftOf="@+id/weatherButton"
        android:layout_toStartOf="@+id/weatherButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/minTemp"
        android:textColor="#fff"
        android:layout_below="@+id/maxTemp"
        android:layout_alignLeft="@+id/maxTemp"
        android:layout_alignStart="@+id/maxTemp"
        android:shadowColor="#000"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="20"
        android:textSize="16dp"
        android:typeface="sans" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/sunrise"
        android:textColor="#fff"
        android:layout_alignTop="@+id/maxTemp"
        android:layout_toRightOf="@+id/weatherButton"
        android:layout_toEndOf="@+id/weatherButton"
        android:shadowColor="#000"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="20"
        android:textSize="16dp"
        android:typeface="sans" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/sunset"
        android:textColor="#fff"
        android:layout_alignTop="@+id/minTemp"
        android:layout_toRightOf="@+id/weatherButton"
        android:layout_toEndOf="@+id/weatherButton"
        android:shadowColor="#000"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="20"
        android:textSize="16dp"
        android:typeface="sans" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/windSpd"
        android:textColor="#fff"
        android:layout_above="@+id/sunrise"
        android:layout_centerHorizontal="true"
        android:shadowColor="#000"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="20"
        android:textSize="16dp"
        android:typeface="sans" />

</RelativeLayout>